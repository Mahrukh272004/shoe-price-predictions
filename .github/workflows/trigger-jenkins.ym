name: Trigger Jenkins Job on Merge

on:
  push:
    branches:
      - master

jobs:
  trigger-jenkins:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Jenkins Job
        run: |
          curl -X POST "http://your-jenkins-url/job/your-job-name/build" \
            --user "your-jenkins-username:your-jenkins-api-token"
